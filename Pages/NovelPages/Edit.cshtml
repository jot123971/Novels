@page
@model Novels.Pages.NovelPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Novel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Novel.NovelId" />
            <div class="form-group">
                <label asp-for="Novel.Title" class="control-label"></label>
                <input asp-for="Novel.Title" class="form-control" />
                <span asp-validation-for="Novel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Novel.Review" class="control-label"></label>
                <input asp-for="Novel.Review" class="form-control" />
                <span asp-validation-for="Novel.Review" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Novel.IsFamous" /> @Html.DisplayNameFor(model => model.Novel.IsFamous)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Novel.Comments" class="control-label"></label>
                <input asp-for="Novel.Comments" class="form-control" />
                <span asp-validation-for="Novel.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Novel.GenreId" class="control-label"></label>
                <select asp-for="Novel.GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
                <span asp-validation-for="Novel.GenreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
